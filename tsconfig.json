{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "target": "es2015",
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata":true,
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./dist",
    },
    "exclude": ["node_modules"],
}